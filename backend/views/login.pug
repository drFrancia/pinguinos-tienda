doctype html
html
  head
    title Login - Panel de Admin
  body
    h1 Iniciar Sesión
    form(action="/admin/login" method="POST")
      label Usuario:
      input(type="text" name="username" required)
      br
      label Contraseña:
      input(type="password" name="password" required)
      br
      button(type="submit") Ingresar
